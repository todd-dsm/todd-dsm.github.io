---
interface Stat {
  value: string;
  label: string;
}

interface Props {
  stats?: Stat[];
}

const { stats = [
  { value: '~30', label: 'Years Engineering' },
  { value: '15x', label: 'Avg Build Speedup' },
  { value: '0', label: 'Tolerance for Waste' },
  { value: '100%', label: 'GitOps Adoption' },
]} = Astro.props;
---

<div class="animate-fade-up card [animation-delay:150ms]">
  <h2 class="font-mono text-sm text-text-muted uppercase tracking-wider">
    By the Numbers
  </h2>
  <div class="mt-6 grid grid-cols-2 gap-6">
    {stats.map((stat) => (
      <div>
        <p class="font-mono text-3xl font-medium text-accent-primary">
          {stat.value}
        </p>
        <p class="mt-1 text-sm text-text-secondary">
          {stat.label}
        </p>
      </div>
    ))}
  </div>
</div>

<style>
  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    animation: fade-up 0.5s ease-out forwards;
    opacity: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-fade-up {
      animation: none;
      opacity: 1;
    }
  }
</style>
