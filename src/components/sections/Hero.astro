---
interface Props {
  name?: string;
  title?: string;
  tagline?: string;
  bio?: string;
  status?: string;
}

const {
  name = 'Todd',
  title = 'Platform Engineering Leader',
  tagline = 'Building reliable systems. Growing strong teams.',
  bio = 'Nearly 30 years turning slow, fragile systems into fast, reliable platforms â€” and building the teams that keep them running.',
  status = 'Open to engineering leadership roles',
} = Astro.props;
---

<section class="container py-16 md:py-24">
  <div class="grid gap-12 lg:grid-cols-12 lg:gap-8">
    <!-- Left: Content -->
    <div class="lg:col-span-7">
      <div class="animate-fade-up">
        <p class="font-mono text-sm text-accent-primary">{title}</p>
        <h1 class="mt-3 text-4xl font-heading font-semibold md:text-5xl">
          {name}
        </h1>
        <p class="mt-4 text-xl text-text-secondary md:text-2xl">
          {tagline}
        </p>
      </div>

      <p class="animate-fade-up mt-6 max-w-xl text-text-secondary [animation-delay:100ms]">
        {bio}
      </p>

      <div class="animate-fade-up mt-8 flex flex-wrap gap-4 [animation-delay:200ms]">
        <a href="/resume" class="btn btn-primary">
          View Resume
        </a>
        <a href="/portfolio" class="btn btn-secondary">
          Read Case Studies
        </a>
      </div>

      <!-- Status indicator -->
      <div class="animate-fade-up mt-8 flex items-center gap-2 [animation-delay:300ms]">
        <span class="relative flex h-2.5 w-2.5">
          <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-75"></span>
          <span class="relative inline-flex h-2.5 w-2.5 rounded-full bg-green-500"></span>
        </span>
        <span class="font-mono text-sm text-text-muted">{status}</span>
      </div>
    </div>

    <!-- Right: Stats -->
    <div class="lg:col-span-5">
      <slot />
    </div>
  </div>
</section>

<style>
  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    animation: fade-up 0.5s ease-out forwards;
    opacity: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-fade-up {
      animation: none;
      opacity: 1;
    }
  }
</style>
