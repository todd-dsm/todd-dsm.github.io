---
import Base from '../layouts/Base.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Timeline from '../components/ui/Timeline.astro';

const experience = [
  {
    dateRange: 'Sep 2023 – Present',
    title: 'Senior Engineer – Consulting',
    company: 'VivSoft',
    type: 'FTE',
    description: 'Platform Engineering & Team Leadership for USAF tech refresh.',
    highlights: [
      'Led team through discovery; converted client goals into epics and stories',
      '1,500% deployment efficiency, 1,800% upgrade efficiency via Argo/Kustomize',
      'Filed issues with AWS Labs; unblocked Karpenter for all GovCloud users',
      'Implemented Karpenter; realized 82% EC2 cost reduction',
    ],
  },
  {
    dateRange: 'Jan – May 2023',
    title: 'Senior Manager – Consulting',
    company: 'Cognizant',
    type: 'FTE',
    description: 'Led engagements for Verizon, Lincoln Financial, and Toyota.',
    highlights: [
      'Finalized FinOps data pipeline (Verizon), K8s consulting (Lincoln), global K8s rollout (Toyota)',
      'Contributed to Security, Platform Engineering, and Kubernetes CoEs; trained junior staff',
    ],
  },
  {
    dateRange: 'Nov – Dec 2022',
    title: 'Technical Principal',
    company: 'Contino (acquired by Cognizant)',
    type: 'FTE',
    description: 'Verizon FinOps engagement to build data pipelines for AWS cost ML engine.',
    highlights: [
      'Architected AWS infrastructure for cloud spending analysis',
    ],
  },
  {
    dateRange: 'Jan – Jun 2022',
    title: 'Principal Cloud Architect',
    company: 'IBM',
    type: 'FTE',
    description: 'Dun & Bradstreet AWS-to-GCP migration.',
    highlights: [
      'Led GCP environment setup for AWS-to-GCP migration',
      'Deployed Kubernetes clusters; implemented MLOps for data processing',
    ],
  },
  {
    dateRange: 'Jul – Dec 2021',
    title: 'Principal Cloud Architect',
    company: 'Taos (acquired by IBM)',
    type: 'FTE',
    description: 'Dish Networks 5G infrastructure on AWS.',
    highlights: [
      'Set up global network; sold and rolled out Kubernetes clusters for GitOps',
      'Satellite communications expertise accelerated 5G delivery',
    ],
  },
  {
    dateRange: 'Aug 2018 – Jun 2020',
    title: 'Cloud Infrastructure Architect',
    company: 'Panasonic Avionics',
    type: 'Contract',
    description: 'Led 3-person team through VMware-to-GCP migration for global satellite ground network.',
    highlights: [
      'Architected vision for ground network supporting satellite comms, inflight WiFi, entertainment',
      '4,800% efficiency gain; secured with Istio and Vault',
    ],
  },
  {
    dateRange: 'Aug 2017 – Aug 2018',
    title: 'Sr. DevOps Engineer',
    company: 'PIMCO via TEKsystems',
    type: 'Contract',
    description: 'Horizontally scaling internal financial models with High Performance Computing.',
    highlights: [
      '6,000% efficiency gain migrating to Kubernetes and Kafka',
      'Solution continues to support $1.4T in managed assets',
    ],
  },
  {
    dateRange: 'Jan – Jun 2014',
    title: 'Sr. Security Architect',
    company: 'Teradata',
    type: 'FTE',
    description: 'Enterprise and government security consulting.',
    highlights: [
      'Clients: J&J, Royal Bank of Canada, Ford, Navy Cyber Command, USAF, US Army',
      'Secret Clearance (2012–2016); DISA STIG and IRS SCSEM expertise',
    ],
  },
];

const skills = {
  'Platform Engineering': ['Kubernetes (EKS/GKE)', 'Terraform', 'Docker', 'Buildpacks', 'Karpenter'],
  'GitOps & CI/CD': ['Argo CD', 'Flux', 'GitHub Actions', 'GitLab Auto DevOps', 'Kustomize'],
  'Security': ['HashiCorp Vault', 'Boundary', 'Istio', 'Linkerd', 'Okta', 'Auth0'],
  'Observability': ['Datadog', 'Grafana', 'Prometheus'],
  'Cloud Platforms': ['AWS (including GovCloud)', 'GCP', 'Azure'],
  'Compliance': ['HIPAA', 'PCI', 'ISO 27001', 'DISA STIG', 'IRS SCSEM'],
};
---

<Base title="Resume | Todd Thomas" description="Platform Engineering Leader with nearly 30 years of systems engineering experience.">
  <Header />
  <main class="flex-1">
    <section class="container py-16 md:py-20">
      <!-- Header with download button -->
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-heading font-semibold md:text-4xl">
            Resume
          </h1>
          <p class="mt-2 text-text-secondary">
            Nearly 30 years building platforms and teams.
          </p>
        </div>
        <a
          href="/resume/resume.pdf"
          download
          class="btn btn-primary shrink-0"
        >
          <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Download PDF
        </a>
      </div>

      <!-- Executive Summary -->
      <div class="mt-12 rounded-card border border-border-subtle bg-bg-secondary p-6 md:p-8">
        <h2 class="font-mono text-sm uppercase tracking-wider text-text-muted">
          Executive Summary
        </h2>
        <p class="mt-4 text-text-secondary leading-relaxed">
          Platform Engineering Leader with nearly 30 years of systems engineering experience. Builds platforms that let developers focus on what matters—functionality—by abstracting away pipelines, infrastructure, and operational complexity. The result: dramatic reductions in cognitive load, faster delivery cycles, lower cloud costs, and higher-quality software. Leads from the front: architecting solutions, writing code, mentoring engineers, and presenting to stakeholders.
        </p>
      </div>

      <!-- Experience Timeline -->
      <div class="mt-16">
        <h2 class="text-2xl font-heading font-semibold">
          Experience
        </h2>
        <div class="mt-8">
          <Timeline items={experience} />
        </div>
      </div>

      <!-- Skills -->
      <div class="mt-16">
        <h2 class="text-2xl font-heading font-semibold">
          Technical Expertise
        </h2>
        <div class="mt-8 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {Object.entries(skills).map(([category, items]) => (
            <div>
              <h3 class="font-mono text-sm uppercase tracking-wider text-text-muted">
                {category}
              </h3>
              <div class="mt-3 flex flex-wrap gap-2">
                {items.map((skill) => (
                  <span class="tag">{skill}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Education -->
      <div class="mt-16">
        <h2 class="text-2xl font-heading font-semibold">
          Education
        </h2>
        <div class="mt-4 text-text-secondary">
          <p>Hamilton Technical College</p>
          <p>Des Moines Area Community College</p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Base>
