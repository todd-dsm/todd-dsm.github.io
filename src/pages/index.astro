---
import Base from '../layouts/Base.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import Stats from '../components/sections/Stats.astro';
import FeaturedWork from '../components/sections/FeaturedWork.astro';
import RecentPosts from '../components/sections/RecentPosts.astro';
---

<Base title="Todd | Platform Engineering Leader">
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Todd Thomas",
    "url": "https://todd-dsm.github.io",
    "jobTitle": "Platform Engineering Leader",
    "description": "Over 20 years building platforms that enable frictionless paths to prod by refactoring complexity into simplicity.",
    "sameAs": [
      "https://github.com/todd-dsm",
      "https://linkedin.com/in/todd-e-thomas"
    ],
    "knowsAbout": ["Platform Engineering", "Kubernetes", "GitOps", "Infrastructure as Code", "Engineering Leadership"],
    "image": "https://todd-dsm.github.io/og-image.png"
  })} />
  <Header />
  <main class="flex-1">
    <Hero>
      <Stats />
    </Hero>
    <FeaturedWork />
    <RecentPosts />
  </main>
  <Footer />
</Base>
